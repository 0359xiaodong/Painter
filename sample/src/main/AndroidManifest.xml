        <activity
            android:name=".ActionBarTransformationActivity"
            android:label="@string/title_activity_action_bar_transformation"
            android:theme="@style/SampleTheme" >
        </activity>
        <activity
            android:name=".colorfulgrid.ColorfulGridActivity"
            android:label="ColorfulGridActivity" >
        </activity>
        <activity
            android:name=".changingactionbar.ChangingActionBarActivity"
            android:label="@string/title_activity_changing_action_bar" >
        </activity>
    </application>

</manifest>
